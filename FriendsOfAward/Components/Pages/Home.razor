@page "/"
@using FriendsOfAward.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
@using FriendsOfAward.Components.UI.Components
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager MyNavMgr
@inject AuthenticationStateProvider AuthStateProvider
@layout UserLayout
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

@if (string.IsNullOrEmpty(userParam) || !qrCodeValid)
{
    <div id="blur-ball"></div>
    <div id="wrapper" style="@WrapperStyle">
        <main id="content" style="@ContentStyle">
            <span id="title">@title</span>
            <div id="note">
                <b>Kein gültiger Zugangslink</b><br />
                Bitte scannen Sie den QR-Code, um an der Abstimmung teilzunehmen.
            </div>
            <div id="manual-entry">
                <input type="text" @bind="manualQrCode" @bind:event="oninput" placeholder="QR-Code eingeben" class="ui-input" />
                <button class="ui-btn primary" @onclick="SubmitManualQrCode">Code bestätigen</button>
            </div>
            @if (!string.IsNullOrEmpty(manualEntryError))
            {
                <div id="note" style="color: #ff5858">
                    @manualEntryError
                </div>
            }
            <button class="admin-btn" @onclick="GoToLogin" title="Admin Login">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#000000" viewBox="0 0 256 256"><path d="M141.66,133.66l-40,40a8,8,0,0,1-11.32-11.32L116.69,136H24a8,8,0,0,1,0-16h92.69L90.34,93.66a8,8,0,0,1,11.32-11.32l40,40A8,8,0,0,1,141.66,133.66ZM200,32H136a8,8,0,0,0,0,16h56V208H136a8,8,0,0,0,0,16h64a8,8,0,0,0,8-8V40A8,8,0,0,0,200,32Z"></path></svg>
            </button>
        </main>
    </div>
}
else if (qrCodeAlreadyUsed)
{
    <div id="blur-ball"></div>
    <div id="wrapper" style="@WrapperStyle">
        <main id="content" style="@ContentStyle">
            <span id="title">@title</span>
            <div id="note">
                <b>QR-Code bereits verwendet</b><br />
                Dieser QR-Code wurde bereits für eine Abstimmung verwendet.<br />
                Sie können nur einmal abstimmen.
            </div>
            <div id="note" style="margin-top: 20px;">
                Vielen Dank für Ihre Teilnahme!
            </div>
            <button class="admin-btn" @onclick="GoToLogin" title="Admin Login">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#000000" viewBox="0 0 256 256"><path d="M141.66,133.66l-40,40a8,8,0,0,1-11.32-11.32L116.69,136H24a8,8,0,0,1,0-16h92.69L90.34,93.66a8,8,0,0,1,11.32-11.32l40,40A8,8,0,0,1,141.66,133.66ZM200,32H136a8,8,0,0,0,0,16h56V208H136a8,8,0,0,0,0,16h64a8,8,0,0,0,8-8V40A8,8,0,0,0,200,32Z"></path></svg>
            </button>
        </main>
    </div>
}
else
{
    <div id="blur-ball"></div>
    <div id="wrapper" style="@WrapperStyle">
        <main id="content" style="@ContentStyle">
            <span id="title">@title</span>
            <div id="note">
                <b>
                    Geben Sie uns Ihre persönlichen Favoriten bekannt!<br />
                </b>
                Diese Abstimmung ist anonym und auf ein Gerät beschränkt.<br />
            </div>
            <div id="grid">
                @for (int i = 0; i < dips.Count; i++)
                {
                    int currentIndex = i;
                    <div title="@dips[i].Name" class="grid-btn @(dips[i].State)" @onclick="() => Btn_SetFavourite(currentIndex)">
                        @(i + 1)
                    </div>
                }
            </div>
            <div id="select-btn-container">
                <button class="select-btn @(selectFavs ? "highlight" : "")" @onclick="() => selectFavs = true">
                    Favoriten wählen (@GetFavoriteCount()/5)
                </button>
                <button class="select-btn @(selectFavs ? "" : "highlight")" @onclick="() => selectFavs = false">
                    Topfavorit wählen (@GetTopfavoriteCount()/1)
                </button>
            </div>
            @if (selectFavs)
            {
                <div id="note">Wähle Favoriten aus!</div>
            }
            else
            {
                <div id="note">Wähle einen Topfavoriten aus!</div>
            }
            @if (favError)
            {
                <div id="note" style="color: #ff5858">
                    5 von 5 Favoriten ausgewählt.
                </div>
            }
            <div id="note" style="color: #ff5858">
                @error
            </div>
            <button id="submit-btn" @onclick="Btn_Submit">Bewertung absenden</button>
   
            @* Toggle für Diplomarbeiten anzeigen/ausblenden (mobilfreundlich) *@
            <div style="margin-top: 12px;">
                <button class="select-btn" @onclick="() => showDiplomas = !showDiplomas" style="width:100%;">
                    @(showDiplomas ? "Diplomarbeiten verbergen" : "Diplomarbeiten anzeigen")
                </button>
            </div>

            @if (showDiplomas)
            {
                <div style="margin-top:12px;">
                    <div style="overflow-x:auto; -webkit-overflow-scrolling:touch;">
                        <table style="width:100%; border-collapse:collapse; color:#ffffff; background:transparent; font-size:0.95rem;">
                            <thead>
                                <tr>
                                    <th style="text-align:left; padding:10px 8px; border-bottom:1px solid #333;">ID</th>
                                    <th style="text-align:left; padding:10px 8px; border-bottom:1px solid #333;">Diplomarbeit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var da in dplList)
                                {
                                    <tr style="border-bottom:1px solid #222;">
                                        <td style="padding:10px 8px; vertical-align:top; color:#ffffff; width:72px;">@da.Item1</td>
                                        <td style="padding:10px 8px; vertical-align:top; color:#ffffff; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                                            @da.Item2
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </main>
    </div>


    <ConfirmationModal @ref="confirmModal"
                       Title="Bewertung wirklich absenden?"
                       Message="@modalMessage"
                       OnYes="SubmitConfirmed"
                       OnNo="SubmitCanceled">
    </ConfirmationModal>
}

@code {
    List<Dip> dips = [];
    bool selectFavs = true;
    bool favError = false;
    private ConfirmationModal confirmModal;
    private string modalMessage = "";
    private string title = "Friends of Award";
    private string error = "";
    private string userParam = "";
    private bool qrCodeValid = false;
    private bool qrCodeAlreadyUsed = false;
    private string manualQrCode = "";
    private string manualEntryError = "";

    // Neu: Liste der eingelesenen Diplomarbeiten, sichtbar in der UI
    private List<(int, string)> dplList = new();
    private bool showDiplomas = false;

    // Dynamische Styles: verlängern die Box und erlauben Scroll, wenn die Diploma-Liste offen ist.
    private string WrapperStyle => showDiplomas ? "height:auto; min-height:100vh; overflow:auto;" : "";
    // Changed: remove max-height limitation and allow visible overflow so the dark content box expands to fit the table
    private string ContentStyle => showDiplomas ? "min-height:72vh; max-height:none; overflow:visible;" : "";

    protected override void OnInitialized()
    {
        base.OnInitialized();

        // Read the "u" parameter from the URL
        var uri = MyNavMgr.ToAbsoluteUri(MyNavMgr.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("u", out var uValue))
        {
            userParam = uValue.ToString();
        }

        // Check if QR code exists in the database
        if (!string.IsNullOrEmpty(userParam))
        {
            qrCodeValid = Vote.QrCodeExists(userParam);

            // Check if QR code has already been used
            if (qrCodeValid)
            {
                qrCodeAlreadyUsed = Vote.HasQrCodeBeenUsed(userParam);
            }
        }

        // Populate the shared dplList (was using a local variable before)
        dplList = DA.GetDAs();

        // Ensure dips is empty and fill it from dplList
        dips.Clear();
        for (int i = 0; i < dplList.Count; i++)
        {
            Dip dip = new(dplList[i].Item2, dplList[i].Item1);
            dips.Add(dip);
        }
    }

    async Task GoToLogin()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState.User.Identity?.IsAuthenticated == true)
            {
                // Already logged in, go directly to dashboard
                MyNavMgr.NavigateTo("/Teilnehmer");
            }
            else
            {
                MyNavMgr.NavigateTo("/Login");
            }
        }
        catch
        {
            // If auth check fails (e.g., during prerender), go to login
            MyNavMgr.NavigateTo("/Login");
        }
    }

    void Btn_SetFavourite(int index)
    {
        favError = false;
        if (selectFavs)
        {
            if (dips[index].State == "favorite")
            {
                dips[index].State = "";
            }
            else if (dips[index].State != "topfavorite")
            {
                if (GetFavoriteCount() < 5)
                {
                    dips[index].State = "favorite";
                }
                else
                {
                    favError = true;
                }
            }
        }
        else
        {
            if (dips[index].State == "topfavorite")
            {
                dips[index].State = "";
            }
            else
            {
                foreach (Dip d in dips)
                {
                    if (d.State == "topfavorite")
                    {
                        d.State = "";
                        break;
                    }
                }
                dips[index].State = "topfavorite";
            }
        }
    }

    int GetFavoriteCount()
    {
        return dips.FindAll(d => d.State == "favorite").Count;
    }

    int GetTopfavoriteCount()
    {
        return dips.FindAll(d => d.State == "topfavorite").Count;
    }

    private async Task Btn_Submit()
    {
        int favCount = dips.Count(d => d.State == "favorite");
        int topfavCount = dips.Count(d => d.State == "topfavorite");

        if (!(favCount == 5 && topfavCount == 1))
        {
            error = "Bitte wähle 5 favoriten und 1 top favorite aus.";
            return;
        }
 
        error = "";
        modalMessage = "Sind Sie sicher, dass Sie das abschicken möchten? Sie können danach nichts mehr ändern.";
        confirmModal.Open();
        
    }

    //string conformationDialog;
    private Task SubmitConfirmed()
    {
        List<Dip> favouriteList = dips.FindAll(d => d.State == "favorite");
        List<Dip> topfavouriteList = dips.FindAll(d => d.State == "topfavorite");


        int topFavId = topfavouriteList.Count == 1 ? topfavouriteList[0].Id : -1;

        List<int> favouriteIds = new();
        for (int i = 0; i < 5; i++)
        {
            if (i < favouriteList.Count)
            {
                Dip d = favouriteList[i];
                favouriteIds.Add(d.Id);
            }
            else
            {
                favouriteIds.Add(-1);
            }
        }


        Vote newVote = new(userParam, topFavId, favouriteIds[0], favouriteIds[1], favouriteIds[2], favouriteIds[3], favouriteIds[4]);
        error = newVote.SaveVote(userParam);

        return Task.CompletedTask;
    }

    private Task SubmitCanceled()
    {
        return Task.CompletedTask;
    }

    private void SubmitManualQrCode()
    {
        manualEntryError = "";
        
        if (string.IsNullOrWhiteSpace(manualQrCode))
        {
            manualEntryError = "Bitte geben Sie einen QR-Code ein.";
            return;
        }

        if (Vote.QrCodeExists(manualQrCode))
        {
            // Navigate to the same page with the QR code as parameter
            MyNavMgr.NavigateTo($"/?u={Uri.EscapeDataString(manualQrCode)}", forceLoad: true);
        }
        else
        {
            manualEntryError = "Ungültiger QR-Code. Bitte versuchen Sie es erneut.";
        }
    }

    private void ScrollToDiploma(int id)
    {
        // Auf Mobilgeräten könnte man hier z.B. per JS interop zu einem Element scrollen.
        // Für jetzt kein JS-Aufruf, nur visuelles Feedback möglich.
        error = $"Angefragte DA-ID: {id}";
    }

    class Dip
    {
        public string Name { get; }
        public int Id { get; set; }
        public string State { get; set; }


        public Dip(string name, int id)
        {
            Name = name;
            Id = id;
            State = "";
        }
    }

}